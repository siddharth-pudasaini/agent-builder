{
    "compilerOptions": {
        "target": "ES2020",
        "module": "commonjs",
        "lib": [
            "ES2020"
        ],
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "outDir": "./dist",
        "rootDir": ".",
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "moduleResolution": "node"
    },
    "include": [
        "index.ts",
        "implementations/**/*.ts",
        "interfaces/**/*.ts",
        "types/**/*.ts",
        "utils/**/*.ts"
    ],
    "exclude": [
        "node_modules",
        "dist",
        "examples",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}